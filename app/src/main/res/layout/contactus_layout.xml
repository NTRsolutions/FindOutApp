<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingTop="45dp"
            android:paddingBottom="35dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:id="@+id/layout1"
                android:layout_marginBottom="15dp"
                >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_local_phone_white_24dp"
                android:id="@+id/phone_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0987 654 3210"
                android:textColor="@color/windowsbackground"
                android:textStyle="bold"
                android:id="@+id/phone"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/layout1"
                >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_email_white_24dp"
                android:layout_below="@+id/phone"
                android:id="@+id/email_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello@tachetech.com"
                android:textColor="@color/windowsbackground"
                android:textStyle="bold"
                android:layout_below="@+id/phone"
                android:layout_toRightOf="@+id/email_image"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                />

            </LinearLayout>

        </RelativeLayout>




        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:hint="@string/name"
            android:background="@drawable/email_etxt_bkgrnd"
            android:layout_marginTop="50dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:textSize="12dp"
            android:inputType="textPersonName"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="@string/email"
            android:background="@drawable/email_etxt_bkgrnd"
            android:layout_marginTop="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:drawablePadding="20dp"
            android:textSize="12dp"
            android:inputType="textEmailAddress"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/number"
            android:hint="@string/Message"
            android:background="@drawable/email_etxt_bkgrnd"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:drawablePadding="20dp"
            android:textSize="12dp"
            android:inputType="textMultiLine"
            android:lines="6"
            android:gravity="top|left"

            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:background="@drawable/button_bkgrnd"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:minHeight="40dp"
            android:layout_marginRight="40dp"/>




    </LinearLayout>

</ScrollView>